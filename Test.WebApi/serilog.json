{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"System": "Error",
				"Microsoft": "Error"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:sszzz} [{Level:w3}] {RequestId} {SourceContext} {Message:lj}{NewLine}{Exception}"
				}
			}
		],
		"Using": [
			"Albatross.Logging"
		],
		"Enrich": [
			"FromLogContext",
			"WithThreadId",
			"WithMachineName",
			"WithErrorMessage"
		]
	}
}